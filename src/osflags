#!/bin/sh

: "${PKG_CONFIG:=pkg-config}"

case $2 in
link)

	case $1 in
		SunOS | solaris)
			echo '-lsocket -lnsl';
		;;
		BeOS)
			echo '-lsocket -lbind -lbsd';
		;;
		Haiku)
			echo '-lnetwork';
		;;
		windows32)
			echo '-lws2_32 -liphlpapi';
		;;
		Linux)
			FLAGS="";
			[ -e /usr/include/selinux/selinux.h ] && FLAGS="$FLAGS -lselinux";
			"$PKG_CONFIG" --exists libsystemd-daemon && FLAGS="$FLAGS $($PKG_CONFIG --libs libsystemd-daemon)";
			"$PKG_CONFIG" --exists libsystemd && FLAGS="$FLAGS $($PKG_CONFIG --libs libsystemd)";
			"$PKG_CONFIG" --exists monocypher && FLAGS="$FLAGS $("$PKG_CONFIG" --libs-only-L monocypher) -l:libmonocypher.a";
			echo $FLAGS;
		;;
	esac
	;;
cflags)
	case $1 in
		windows32)
			echo '-DWINVER=0x0501';
		;;
		BeOS)
			echo '-Dsocklen_t=int';
		;;
		Darwin)
			echo '-D__APPLE_USE_RFC_3542';
		;;
		Linux)
			FLAGS="-D_GNU_SOURCE"
			[ -e /usr/include/selinux/selinux.h ] && FLAGS="$FLAGS -DHAVE_SETCON";
			"$PKG_CONFIG" --exists libsystemd-daemon && FLAGS="$FLAGS -DHAVE_SYSTEMD";
			"$PKG_CONFIG" --exists libsystemd && FLAGS="$FLAGS -DHAVE_SYSTEMD";
			"$PKG_CONFIG" --exists monocypher && FLAGS="$FLAGS -DHAVE_MONOCYPHER";
			echo $FLAGS;
		;;
		GNU/kFreeBSD|GNU)
			echo '-D_GNU_SOURCE'
		;;
	esac
;;
*)
;;
esac
